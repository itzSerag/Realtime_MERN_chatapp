{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/main.ts",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "backend/src/main.ts"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/dist"
        }
    ]
}